<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:orientation="vertical"
            android:padding="3dp"
            tools:context=".Home">


            <android.support.v7.widget.CardView
                android:id="@+id/chapter1"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="121dp"
                        android:background="@drawable/circlebackgroundgreen"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:scaleX="2.5"
                        android:scaleY="2.5"
                        android:src="@drawable/ch1" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="8dp"
                        android:background="@color/black_overlay"
                        android:padding="7dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:gravity="center"
                        android:text="Introduction to Stock Markets"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/chapter2"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circlebackgrounddeepblue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="121dp"
                        android:background="@drawable/circlebackgrounddeepblue"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/ch2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/black_overlay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Technical Analysis"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
